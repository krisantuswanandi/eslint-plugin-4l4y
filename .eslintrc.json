{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "4l4y"
    ],
    "rules": {
        "indent": ["error", 2],
        "quotes": ["error", "single"],
        "semi": ["error", "never"],
        "4l4y/variable-name": "error",
        "4l4y/function-name": "error",
        "4l4y/signed-number": "error",
        "4l4y/thousand-separator": "error"
    },
    "ignorePatterns": [
        "dist"
    ]
}
